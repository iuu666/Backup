#!name=📊 Google 汇率监控多币种预设
#!desc=多组预设：美元、欧元、英镑兑人民币 & 人民币兑港币、日元、韩元、里拉
#!icon=bitcoinsign.circle
#!author=okk
#!update=2025-08-05
#!arguments=threshold:0.3,notify:true,icon:bitcoinsign.circle,color:#3A78F2,UPDATE_INTERVAL:43200
#!arguments-desc=[参数设置]\nthreshold:波动阈值（%）\nnotify:推送通知开关\nicon:面板图标\ncolor:图标颜色\nUPDATE_INTERVAL:刷新间隔（秒）

[Panel]
美元兑人民币=script-name=📊 Google 汇率监控-美元兑人民币,update-interval={{{UPDATE_INTERVAL}}}
欧元兑人民币=script-name=📊 Google 汇率监控-欧元兑人民币,update-interval={{{UPDATE_INTERVAL}}}
英镑兑人民币=script-name=📊 Google 汇率监控-英镑兑人民币,update-interval={{{UPDATE_INTERVAL}}}
人民币兑港元日元韩元里拉=script-name=📊 Google 汇率监控-人民币兑多币种,update-interval={{{UPDATE_INTERVAL}}}

[Script]
📊 Google 汇率监控-美元兑人民币=type=generic,script-path=https://raw.githubusercontent.com/你的用户名/你的仓库/main/google_exrate.js,argument=base=USD&currencies=CNY&threshold={{{threshold}}}&notify={{{notify}}}&icon={{{icon}}}&color={{{color}}}

📊 Google 汇率监控-欧元兑人民币=type=generic,script-path=https://raw.githubusercontent.com/你的用户名/你的仓库/main/google_exrate.js,argument=base=EUR&currencies=CNY&threshold={{{threshold}}}&notify={{{notify}}}&icon={{{icon}}}&color={{{color}}}

📊 Google 汇率监控-英镑兑人民币=type=generic,script-path=https://raw.githubusercontent.com/你的用户名/你的仓库/main/google_exrate.js,argument=base=GBP&currencies=CNY&threshold={{{threshold}}}&notify={{{notify}}}&icon={{{icon}}}&color={{{color}}}

📊 Google 汇率监控-人民币兑多币种=type=generic,script-path=https://raw.githubusercontent.com/你的用户名/你的仓库/main/google_exrate.js,argument=base=CNY&currencies=HKD,JPY,KRW,TRY&threshold={{{threshold}}}&notify={{{notify}}}&icon={{{icon}}}&color={{{color}}}
